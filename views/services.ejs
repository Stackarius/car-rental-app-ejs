    transform: scale(1.05);
  }

  .cta-section {
    max-width: 1200px;
    margin: 5rem auto;
    padding: 4rem 2rem;
    background: linear-gradient(135deg, #1a1a1a 0%, #000 100%);
    border-radius: 2rem;
