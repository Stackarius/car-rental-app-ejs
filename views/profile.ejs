<section
  class="profile-section section bg-white"
  style="
    max-width: 500px;
    margin: 2rem auto;
    border-radius: 1rem;
    box-shadow: 0 4px 24px rgba(0, 0, 0, 0.08);
  "
>
  <h1 class="section-title" style="margin-bottom: 1.5rem">Your Profile</h1>
  <div
    class="profile-details"
    style="display: flex; flex-direction: column; gap: 1.2rem"
  >
    <div class="form-group input-field">
      <label for="username">Username</label>
      <input
        type="text"
        id="username"
        name="username"
        value="<%= user.username %>"
        readonly
        style="
          padding: 10px;
          border-radius: 0.5rem;
          border: 1.5px solid #ccc;
          background: #f5f5f5;
        "
      />
    </div>
    <div class="form-group input-field">
      <label for="email">Email</label>
      <input
        type="email"
        id="email"
        name="email"
        value="<%= user.email %>"
        readonly
        style="
          padding: 10px;
          border-radius: 0.5rem;
          border: 1.5px solid #ccc;
          background: #f5f5f5;
        "
      />
    </div>
    <div class="form-group input-field">
      <label for="role">Role</label>
      <input
        type="text"
        id="role"
        name="role"
        value="<%= user.role %>"
        readonly
        style="
          padding: 10px;
          border-radius: 0.5rem;
          border: 1.5px solid #ccc;
          background: #f5f5f5;
        "
      />
    </div>
  </div>
  <form action="/profile/update" method="POST" style="margin-top: 2rem">
    <h2 style="font-size: 1.1rem; margin-bottom: 0.7rem">Change Password</h2>
    <div class="form-group input-field">
      <label for="currentPassword">Current Password</label>
      <input
        type="password"
        id="currentPassword"
        name="currentPassword"
        required
        style="padding: 10px; border-radius: 0.5rem; border: 1.5px solid #ccc"
      />
    </div>
    <div class="form-group input-field">
      <label for="newPassword">New Password</label>
      <input
        type="password"
        id="newPassword"
        name="newPassword"
        required
        style="padding: 10px; border-radius: 0.5rem; border: 1.5px solid #ccc"
      />
    </div>
    <button type="submit" class="btn register-btn" style="margin-top: 0.5rem">
      Update Password
    </button>
  </form>
</section>
