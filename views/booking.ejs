<section
  class="booking-section section bg-white"
  style="
    max-width: 500px;
    margin: 2rem auto;
    border-radius: 1rem;
    box-shadow: 0 4px 24px rgba(0, 0, 0, 0.08);
  "
>
  <h1 class="section-title" style="margin-bottom: 1.5rem">Book a Car</h1>
  <form
    action="/book"
    method="POST"
    class="booking-form"
    style="display: flex; flex-direction: column; gap: 1.2rem"
  >
    <div class="form-group input-field">
      <label for="car">Select Car</label>
      <select
        id="car"
        name="carId"
        required
        style="padding: 10px; border-radius: 0.5rem; border: 1.5px solid #ccc"
      >
        <% vehicles.forEach(function(vehicle) { %>
        <option value="<%= vehicle.id %>" <%= (selectedCarId && selectedCarId == vehicle.id) ? 'selected' : '' %>>
          <%= vehicle.model %> - <%= vehicle.type %>
        </option>
        <% }); %>
      </select>
    </div>
    <div class="form-group input-field">
      <label for="startDate">Start Date</label>
      <input
        type="date"
        id="startDate"
        name="startDate"
        required
        style="padding: 10px; border-radius: 0.5rem; border: 1.5px solid #ccc"
      />
    </div>
    <div class="form-group input-field">
      <label for="endDate">End Date</label>
      <input
        type="date"
        id="endDate"
        name="endDate"
        required
        style="padding: 10px; border-radius: 0.5rem; border: 1.5px solid #ccc"
      />
    </div>
    <div class="form-group input-field">
      <label for="notes">Notes (optional)</label>
      <textarea
        id="notes"
        name="notes"
        rows="2"
        style="padding: 10px; border-radius: 0.5rem; border: 1.5px solid #ccc"
      ></textarea>
    </div>
    <button type="submit" class="btn register-btn" style="margin-top: 0.5rem">
      Book Now
    </button>
  </form>
</section>
